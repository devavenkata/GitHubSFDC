<apex:page controller="CandidateRegisterController">
 <apex:form >
   <apex:pageBlock >
     <apex:pageBlockSection >
        <apex:inputField value="{!candidate.First_Name__c}"/>
        <apex:inputField value="{!candidate.Last_Name__c}"/>
        <apex:inputField value="{!candidate.Email_Id__c}"/>
        <apex:inputField value="{!candidate.Mobile_Number__c}"/>
        <apex:inputField value="{!candidate.Country__c}"/>        
        <apex:inputField value="{!candidate.City__c}"/>                  
     </apex:pageBlockSection>
     <apex:pageBlockButtons >
        <apex:commandButton value="Save" action="{!saveRecords}"/>
     </apex:pageBlockButtons>
   </apex:pageBlock>
 </apex:form>
</apex:page>